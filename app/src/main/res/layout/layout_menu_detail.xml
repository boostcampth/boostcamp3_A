<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="activity"
            type="com.aone.menurandomchoice.views.ownerstore.OwnerStoreActivity"/>
        <variable name="menuDetail" type="com.aone.menurandomchoice.repository.model.MenuDetail"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="@{activity::onMenuDetailClick}">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            app:error="@{@drawable/no_photo}"
            app:photoUrl="@{menuDetail.photoUrl}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{menuDetail.name}"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Integer.toString(menuDetail.price)}"
            android:textSize="18sp" />
    </LinearLayout>

</layout>